{
    "manifest_version": 3,
    "name": "Sign Language Translator",
    "version": "1.0",
    "description": "A Chrome extension to translate text into sign language.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "web_accessible_resources": [
      {
        "resources": ["videos/*.mp4"],
        "matches": ["<all_urls>"]
      }
    ]
  }